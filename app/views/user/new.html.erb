<h1>User#new</h1>
<h1>Form to create a new user</h1>

<%= form_for :user, url: '/users' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %> 
  <br>
  <%= f.submit %>
<% end %>

