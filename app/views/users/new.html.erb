<div>
  <h1>SignUp!</h1>
</div>

<div>
  <%= form_for(@user) do |f| %>
    <%= f.text_field :name, placeholder: 'Name' %><br />
    <%= f.password_field :password, placeholder: 'Password' %><br />
    <%= f.password_field :password_confirmation,
      placeholder: 'Password Confirmation'%><br />
    <%= f.submit %>
  <% end %>
</div>
