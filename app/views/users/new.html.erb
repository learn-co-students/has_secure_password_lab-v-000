<h1>Create an Account!</h1>

<% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>
  <br>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit %>
<% end %>