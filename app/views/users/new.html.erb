<%= form_for @user, controller: 'users', action: 'create' do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br /><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br /><br />

  <%= f.label :confirm_password %>
  <%= f.password_field :password_confirmation %><br /><br />
  <%= f.submit %>
<%end%>
