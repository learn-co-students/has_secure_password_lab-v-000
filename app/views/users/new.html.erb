<h1>Signup!</h1><br><br>
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Enter your name" %><br>
    <%= f.label :password %>
      <%= f.text_field :password, placeholder: "Choose a password" %><br>
    <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation, placeholder: "Confirm password" %><br>
    <%= f.submit %>
  <% end %>
