<%= flash[:alert] %>

<h2>Sign Up</h2>
<%= form_for @user, url: signup_path do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
  <p><%= f.label :password %>
  <%= f.password_field :password %></p>
  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>
  <%= f.submit %>
<% end %>