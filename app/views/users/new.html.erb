<%= form_for @user, controller: '/users', action: 'create', method: 'post'  do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %><br>

  <%= f.label "Password:" %>
  <%= f.password_field :password %><br>

  <%= f.label "Password Confirmation:" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Submit" %>
<% end %>
