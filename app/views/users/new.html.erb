<%= form_for (@user), controller: 'users', action: 'create' do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %><br />

    <%= f.label :password %>:
    <%= f.password_field :password_digest %><br />

    <%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation %><br /><br />


    <%= f.submit 'Create' %>
<% end %>