<%= form_for @user do |f| %>
	<%= f.label 'enter a username' %>
	<%= f.text_field :name %>
	
	<%= f.label 'enter a password' %>
	<%= f.password_field :password %>
	
	<%= f.label  :password_confirmation%>
	<%= f.password_field :password_confirmation %>
	
	<%= f.submit "create" %>
<% end %>


