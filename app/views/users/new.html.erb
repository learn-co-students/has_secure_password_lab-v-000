<h1>Account Creation</h1>

<%= form_for @user do |f| %>
    <%= f.label :name, "Username:" %>
    <%= f.text_field :name %><br>

    <%= f.label :password, "Password:" %>
    <%= f.password_field :password %><br>

    <%= f.label :password, "Password Confirmation:" %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit %>
<% end %>