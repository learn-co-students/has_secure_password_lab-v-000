<h1>Sign Up</h1>
<%= form_tag('/users', method: :post) do %>
  <%= label_tag "Username" %>
  <%= text_field_tag "user[name]" %>
  <br>
  <%= label_tag "Password" %>
  <%= password_field_tag "user[password]" %>
  <br>
  <%= label_tag "Confirm Password" %>
  <%= password_field_tag "user[password_confirmation]" %>
  <br>
  <%= submit_tag "Sign Up" %>
<% end %>
