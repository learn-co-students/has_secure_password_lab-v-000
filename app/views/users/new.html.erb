<h1>Signup</h1>

<%= form_for(@user, url: signup_path) do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
  <br><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.submit "Log in" %>
  <br><br>
<% end %>