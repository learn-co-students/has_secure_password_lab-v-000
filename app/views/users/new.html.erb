<h1>Signup</h1>
<p>
    <%= form_for @user, url: signup_path do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %> <br><br>
        <%= f.label :password %>
        <%= f.password_field :password %> <br><br>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %> <br><br>
        <%= f.submit "Sign Up"%>
    <% end %>
</p>
