<%= form_for @user, url: {action: :create}, method: :post do |f|%>
  <%= f.label :name %> 
  <%= f.text_field :name %> <br>

  <%= f.label :password %>
  <%= f.password_field :password %> <br>

  <%= f.label :password_confirmation %> 
  <%= f.password_field :password_confirmation %> <br>

  <%= f.submit 'sign up' %>
<% end %>


