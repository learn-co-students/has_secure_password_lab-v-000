<% provide :title, "Create new user" %>
<h1>Create user</h1>

<div>
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %></br>

    <%= f.label :password %>
    <%= f.password_field :password %></br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></br>

    <%= f.submit "Create user" %>
  
  <% end %>
</div>
