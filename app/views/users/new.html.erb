<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "log in" %>

<p>Don't have an account?</p>
<%= link_to(controller: 'users', action: 'new') { 'sign up'} %>
<% end %>
