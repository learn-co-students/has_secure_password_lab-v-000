<h1>Sign Up Page</h1>

<%= form_tag ('/signup') do %>
<p><%= label_tag "Your Name:" %></p>
<p><%= text_field_tag 'name' %></p>
<p><%= label_tag 'Password:' %></p>
<p><%= password_field_tag 'password' %></p>
<p><%= label_tag "Confirmation Password:" %></p>
<p><%= password_field_tag 'password_confirmation' %></p>
<p><%= submit_tag "Sign Up" %></p>
<% end %>
