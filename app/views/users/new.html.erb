<h3>FORM to create a NEW USER</h3>

<%= form_tag do %>
    <%= label_tag :name, "Name: " %>
    <%= text_field_tag :name %>

    <%= label_tag :password, "Password: " %>
    <%= password_tag :password %>

    <%= label_tag, :password_confirmation, "Confirm password: " %>
    <%= password_tag, :password_confirmation %>

    <%= submit_tag "Create Account" %>
<% end %>