<h1>Signup</h1>

<%= form_for(@user, create_user_path, method: :post) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.submit "Signup" %>
<% end %>