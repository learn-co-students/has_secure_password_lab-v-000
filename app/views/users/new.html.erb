<% if flash[:message] %>
  <font color="red"><%= flash[:message] %></font>
<% end %>

<%= form_for @user do |f| %>
  <p>Username: <%= f.text_field :name %></p>
  <p>Password: <%= f.password_field :password %></p>
  <p>Confirm Password: <%= f.password_field :password_confirmation %></p><br>
  <%= f.submit "Sign Up" %>
<% end %>
