<h1>Sign Up</h1>
<%= form_for @user, controller: 'users', action: 'create' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br> <br>
    <%= f.label :password %>
    <%= f.password_field :password %> <br> <br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit 'Sign Up' %>
<% end %>