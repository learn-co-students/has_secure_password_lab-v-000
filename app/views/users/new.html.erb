<h1>Sign Up</h1>

<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <%= f.label_for :name %>
  <%= f.text_field :name %><br>

  <%= f.label_for :password %>
  <%= f.password_field :password %><br>

  <%= f.label_for :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit "Submit" %>
<% end %>
