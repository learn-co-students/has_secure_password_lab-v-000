<%= form_tag(controller: "users", action: "create", method: "post") do %>
  <%= label_tag(:name) %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:password) %>
  <%= text_field_tag(:password) %>
  <%= label_tag(:password_confirmation) %>
  <%= text_field_tag(:password_confirmation) %>
  <%= submit_tag("Sign Up") %>
<% end %>