<h1>Signup Page</h1>
<%= form_for :user, url: '/signup' do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
    <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.text_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit 'Signup' %>
  </div>
<% end %>


<h2>Or returning users login here:</h2>

<%= button_to "Login", login_path, :method => "get" %>





