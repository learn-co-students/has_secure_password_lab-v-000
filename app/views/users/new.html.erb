<h1>Please Signup:</h1>

<%= form_tag ({controller: 'users', action: 'create', method: 'post'}) do %>

  <%= label_tag "Name:" %>
  <%= text_field_tag :name %><br>

  <%= label_tag "Password:" %>
  <%= password_field_tag :password %><br>

  <%= label_tag "Confirm Password:" %>
  <%= password_field_tag :password_confirmation %><br>

  <%= submit_tag "Login" %>
<% end %>