<h2>Create a new user account: </h2>
<%= form_for @user do |f| %>
  <%= f.label "Name: " %>
  <%= f.text_field :name %><br>
<br>
  <%= f.label "Password: " %>
  <%= f.password_field :password %><br>
<br>
  <%= f.label "Confirm password: " %>
  <%= f.password_field :password_confirmation %><br>
<br>
  <%= f.submit %>
<% end %>
