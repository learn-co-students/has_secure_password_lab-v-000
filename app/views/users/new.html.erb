<h1>Sign up</h1>

<%= form_for @user do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name, :placeholder => "Name"%><br>

  <%= f.label :password%>
  <%= f.password_field :password, :placeholder => "Password"%><br>

  <%= label_tag :"Confirm Password"%>
  <%= password_field_tag :password_confirmation,nil, :placeholder => "Confirm Password"%><br>

  <%= f.submit "Signup" %>
<% end %>
