<%= form_for @user, controller: 'users', action:'create' do |f| %>

<%= f.label :name%>
<%= f.text_field :name%>

<%= f.label :password%>
<%= f.password_field :password%>

<%= f.label :password_confirmation%>
<%= f.password_field :password_confirmation%>

<%= f.submit "create"%>

<%end%>

<%= form_for @user, url:login_path, method: :post do |f| %>
<%=f.label :name %>
<%=f.text_field :name %>

<%=f.label :password%>
<%=f.password_field :password%>

<%= f.submit "Log In" %>
<%end%>
