<% if flash[:notice] %>
  <div style="color:red;"><%= flash[:notice] %></div>
<% end %>

<p>Login</p>
<%= form_for(:user, url: sessions_path) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "Submit" %>
<% end %>
<p>Or <%= link_to "sign up", new_user_path %> </p>
