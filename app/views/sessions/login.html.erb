<h3>Please log in:</h3>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  <%= label_tag "Name:" %>
  <%= text_field_tag 'user[name]', nil, placeholder: "Name" %><br><br>
  <%= label_tag "Password:" %>
  <%= password_field_tag 'user[password]' %><br><br>
  <%= label_tag "Password confirmation:" %>
  <%= password_field_tag 'user[:password]' %><br><br>

  <input type=submit value='login'>
<% end %>
