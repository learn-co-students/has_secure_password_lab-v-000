<h1>Log in</h1>

<%= form_tag sessions_path, method: 'post' do %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <p>
    <%= label_tag "user_name", "Name" %>
    <%= text_field_tag "user[name]" %>
  </p>

  <p>
    <%= label_tag "password" %>
    <%= password_field_tag "user[password]" %>
  </p>

  <%= submit_tag "log in" %>
<% end %>
