<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Greets!</h1>

<%= form_for :session, url: login_path do |f| %>
  Username: <%= f.text_field :name %>
  Password: <%= f.password_field :password %>
  <%= f.submit "Log In" %>
<% end %>

New user? <%= link_to "Sign up now!", signup_path %>
