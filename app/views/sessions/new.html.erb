<h1>Login!</h1>
<%= form_tag(login_path) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br />
  <%= label_tag :password %>
  <%= text_field_tag :password %><br />
  <%= label_tag :password_confirmation %>
  <%= text_field_tag :password_confirmation %><br />
  <%= submit_tag "Login" %>
<% end %>
