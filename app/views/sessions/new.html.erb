<h1>Login</h1>

<% if flash[:notice] %>
  <h3><%= flash[:notice] %></h3>
<% end %>

<%= form_tag sessions_path do %>

  <div class="field">
  <%= label_tag "user[name]" %>
  <%= text_field_tag "user[name]" %><br>
  </div>

  <div class="field">
  <%= label_tag "user[password]" %>
  <%= password_field_tag "user[password]" %><br>
  </div>

  <%= submit_tag "Signup" %>
<% end %>
