<h1>Login</h1>

<%= form_tag(sessions_path) do %>

  <%= label_tag "Name" %>
  <%= text_field_tag :name %><br><br>

  <%= label_tag "Password" %>
  <%= text_field_tag :password %><br><br>

  <%= label_tag "Confirm Password" %>
  <%= text_field_tag :confirm_password %><br><br>

  <%= submit_tag "Login" %>

<% end %>
