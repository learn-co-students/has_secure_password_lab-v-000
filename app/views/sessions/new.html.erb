<h1>Login Page</h1>

<%= form_for :user, url: '/login' do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>

  </div>

  <div class="actions">
    <%= f.submit 'Login' %>
  </div>
<% end %>
