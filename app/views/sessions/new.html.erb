<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Login</h1>
<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  Name: <%= text_field_tag :name %>
  Password: <%= text_field_tag :password %>
  <%= submit_tag "Login" %>
<% end %>

<br></br>

Don't have an account? <%= link_to "Signup Here.", '/signup' %>
