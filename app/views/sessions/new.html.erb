<h1>Login Form</h1>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <p><%= f.label :name, "Email" %>: <%= f.text_field :name %></p>
  <p><%= f.label :password %>: <%= f.password_field :password %></p>
  <p><%= f.submit "Login" %> or <%= link_to "Signup", signup_path %></p>
<% end %>