<h1>Login:</h1>

<%= form_for @user, url: login_path, method: :post do |f| %>

   <%= f.label :name %>
   <%= f.text_field :name %>

   <%= f.label :password %>
   <%= f.password_field :password %>

   <%= f.submit "Log in" %>

<% end %>

