<div>
  <%= form_for @user, url: login_path, method: :post do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :password %>
    <%= f.text_field :password %>
    <br>

    <%= f.submit "Log In" %>
  <% end %>
</div>

<br>
<%= link_to "sign up", new_user_path %>
