<h1>Log in below:</h1>

<%= form_for :user, url: '/login' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <br><br>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <br><br>

    <%= f.submit 'Log In' %>
<% end %>

<br><br>

<p>New user? <%= link_to(controller: 'users', action: 'new') { 'Sign Up' } %>
