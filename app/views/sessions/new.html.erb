<h1>Log In</h1>

<%= form_for :user, url: login_path do |f| %>
  <%= f.label :name, "Username:" %>
  <%= f.text_field :name %><br><br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %><br><br>
  <%= f.submit "log in" %> or <%= link_to "sign up", new_user_path %>
<% end %>

