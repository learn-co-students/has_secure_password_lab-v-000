<% form_for @user, url: login_path, method: post do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.submit "Login" %>
or <%= link_to(controller: 'users', action: 'new') {'Sign up'} %>
<!-- or <%= link_to "Sign up", controller: 'users', action: 'new' %> -->
<% end %>